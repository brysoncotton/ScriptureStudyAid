<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:baselineAligned="false">

    <!-- Source 1 (Left) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@drawable/bg_comparison_cell"
        android:layout_marginEnd="4dp">
        
        <TextView
            android:id="@+id/tvSource1Verse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Gen 1:1"
            android:textColor="@color/primary_blue"
            android:gravity="start"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvSource1Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="In the beginning..."
            android:textColor="@android:color/black"
            android:textSize="14sp"/>
    </LinearLayout>

    <!-- Source 2 (Right) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@drawable/bg_comparison_cell"
        android:layout_marginStart="4dp">
        
        <TextView
            android:id="@+id/tvSource2Verse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Mos 2:1"
            android:textColor="@color/secondary_gold"
            android:gravity="start"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvSource2Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="And it came to pass..."
            android:textColor="@android:color/black"
            android:textSize="14sp"/>
    </LinearLayout>

</LinearLayout>
