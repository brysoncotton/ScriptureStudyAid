<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="center_vertical">

    <!-- Left Cell -->
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/bg_comparison_cell"
        android:minHeight="80dp"
        android:padding="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvLeftVerse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/primary_blue"/>
            <TextView
                android:id="@+id/tvLeftText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:ellipsize="end"
                android:textSize="12sp"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/btnAddLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_input_add"
            android:layout_gravity="center"
            android:background="?attr/selectableItemBackgroundBorderless"/>
            
        <ImageButton
            android:id="@+id/btnClearLeft"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_delete"
            android:tint="#FF0000"
            android:layout_gravity="top|end"
            android:background="?attr/selectableItemBackgroundBorderless"/>
    </FrameLayout>

    <!-- Delete Row Button (Middle) -->
    <ImageButton
        android:id="@+id/btnDeleteRow"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:padding="4dp"
        android:scaleType="fitCenter"
        android:src="@android:drawable/ic_delete"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        android:background="?attr/selectableItemBackgroundBorderless"/>

    <!-- Right Cell -->
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/bg_comparison_cell"
        android:minHeight="80dp"
        android:padding="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvRightVerse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/secondary_gold"/>
            <TextView
                android:id="@+id/tvRightText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:ellipsize="end"
                android:textSize="12sp"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/btnAddRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_input_add"
            android:layout_gravity="center"
            android:background="?attr/selectableItemBackgroundBorderless"/>
            
        <ImageButton
            android:id="@+id/btnClearRight"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_delete"
            android:tint="#FF0000"
            android:layout_gravity="top|end"
            android:background="?attr/selectableItemBackgroundBorderless"/>
    </FrameLayout>

</LinearLayout>
