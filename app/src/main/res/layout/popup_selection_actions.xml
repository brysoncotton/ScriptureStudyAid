<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/popup_background"
    android:padding="4dp"
    android:elevation="8dp">

    <ImageButton
        android:id="@+id/btnClose"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_close"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Close"
        android:scaleType="centerInside"
        android:padding="8dp" />

    <ImageButton
        android:id="@+id/btnHighlight"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_highlight"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Highlight"
        android:scaleType="centerInside"
        android:padding="8dp" />

    <ImageButton
        android:id="@+id/btnNote"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_note"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Add Note"
        android:scaleType="centerInside"
        android:padding="8dp" />

    <ImageButton
        android:id="@+id/btnTag"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_tag"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Add Tag"
        android:scaleType="centerInside"
        android:padding="8dp" />

    <ImageButton
        android:id="@+id/btnBookmark"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_bookmark"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Bookmark"
        android:scaleType="centerInside"
        android:padding="8dp" />

    <ImageButton
        android:id="@+id/btnLink"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_link"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Link Scriptures"
        android:scaleType="centerInside"
        android:padding="8dp" />

    <ImageButton
        android:id="@+id/btnDelete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_delete"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Delete Annotation"
        android:scaleType="centerInside"
        android:padding="8dp" />

    <ImageButton
        android:id="@+id/btnDefine"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_define"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Define Word"
        android:scaleType="centerInside"
        android:padding="8dp" />

</LinearLayout>
